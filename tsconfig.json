{
  "include": ["backend/**/*"],
  "exclude": ["node_modules", "./client"],
  "compilerOptions": {
    "target": "ES2017",         
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "dist",
     "allowJs": true,             
    "esModuleInterop": true,           
    "forceConsistentCasingInFileNames": true,
    "strict": true,                               
    "skipLibCheck": true
  }
}
